<h2>Dashboard</h2>
<h4>Your Blog Posts</h4>

{{#each blogs as |blog|}}
  <div class='card d-flex border border-dark border-2' id='dashboard-blog'>
    <a class='plain-link' href='dashboard/{{blog.id}}'>
      <div
        class='card-header d-flex justify-content-between align-items-center bg-dark text-light'
      >
        <h5 class='card-title mb-0'>{{title}}</h5>
        <p class='mb-0 ml-3'>{{format_date blog.createdAt}}</p>
      </div>
    </a>
  </div>
  <br />
{{else}}
  <p>No blog posts found.</p>
{{/each}}

{{#if logged_in}}
  <div
    class='card border border-dark border-2'
    id='dashboardContainer'
    style='display: none;'
  >
    <h5 class='card-header bg-dark text-light'>Create New Post</h5>
    <div class='card-body bg-secondary'>
      <form class='new-post'>
        <div class='mb-3'>
          <label for='dashboard-title' class='form-label'>Title</label>
          <input type='text' class='form-control' id='dashboard-title' />
        </div>
        <div class='mb-3'>
          <label for='dashboard-content' class='form-label'>
            Content
          </label>
          <textarea
            class='form-control'
            id='dashboard-content'
            rows='3'
          ></textarea>
        </div>
        <a class='btn btn-dark text-light w-100' id='createBtn'>Create</a>
      </form>
    </div>
  </div>
  <br />
  <div class='mb-3 d-flex justify-content-center'>
    <button
      class='btn btn-dark text-light align-content-'
      id='newPostBtn'
      type='submit'
    >
      + New Post
    </button>
  </div>
{{/if}}

<script src='/js/dashboard.js'></script>