<!-- Loop over each object in the blogposts array -->
{{#each blogposts as |blogpost|}}
  <div class='row mb-4 project'>
    <div class='col-md-5'>
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        {{{get_emoji}}}
        <a href='/project/{{blogpost.id}}'>{{blogpost.name}}</a>
      </h2>
      <p>
        <span for='img' aria-label='money'>ðŸ’²</span>
        <!-- Pass needed_funding value to the helper function -->
        <span class='dollar-amount'>{{format_amount
            blogpost.needed_funding
          }}</span>
        needed!
      </p>
      <p>Posted by
        {{blogpost.user.name}}
        on
        {{format_date blogpost.date_created}}</p>
    </div>
    <div class='col-md-7'>
      <p>
        {{blogpost.post}}
      </p>
    </div>
  </div>
{{/each}}