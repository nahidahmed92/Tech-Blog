<h2>Latest Blog Posts</h2>
{{#each blogs as |blog|}}
  {{!-- <div>
    <div>

      <p>
        Published by
        {{blog.user.name}}
        on
        {{format_date blog.date_created}}
      </p>
    </div>
    <p>{{blog.post}}</p>
    <a href='/post/{{id}}'>Read more</a>
  </div> --}}

  <div class='card d-flex border border-dark border-2'>
    <div
      class='card-header d-flex justify-content-between align-items-center bg-dark text-light'
    >
      <h5 class='card-title mb-0'>{{blog.title}}</h5>
      <p class='mb-0 ml-3'>
        Published by
        {{blog.user.name}}
        on
        {{format_date blog.date_created}}
      </p>
    </div>
    <div class='card-body bg-secondary'>
      <p class='card-text'>{{blog.post}}</p>
      <div class='d-flex justify-content-end'>
        <a class='btn btn-dark text-light' href='/dashboard'>Read More</a>
      </div>
    </div>
  </div>
  <br />
{{else}}
  <p>No blog posts found.</p>
{{/each}}