<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Sign Up</title>
  </head>
  <body>
    <h1>Sign Up</h1>
    <form class='signup-form'>
      <input
        type='text'
        name='name'
        placeholder='Full Name'
        id='name-signup'
        required
      />
      <br />
      <br />
      <input
        type='email'
        name='email'
        placeholder='Email'
        id='email-signup'
        required
      />
      <br />
      <br />
      <input
        type='password'
        name='password'
        placeholder='Password'
        id='password-signup'
        required
      />
      <br />
      <br />
      <button type='submit'>Sign Up</button>
    </form>
    <p>Already have an account? <a href='/login'>Login</a></p>
  </body>
</html>