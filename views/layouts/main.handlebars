<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>The Tech Blog</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='css/style.css' />
  </head>

  <body>
    <div class='flex-column justify-space-around'>
      <header class='display-flex justify-space-between align-center p-2'>
        <nav>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a class='no-button' href='/'>Home</a>
            <a class='no-button' href='/dashboard'>Dashboard</a>
            <a class='no-button' href='/login'>Login</a>
            <button class='no-button' id='logout'>Logout</button>
          {{else}}
            <a class='no-button' href='/'>Home</a>
            <a class='no-button' href='/login'>Dashboard</a>
            <a class='no-button' href='/login'>Login</a>
            <button class='no-button' id='logout'>Logout</button>
          {{/if}}
        </nav>
        <h1>
          <a href='/'>The Tech Blog</a>
        </h1>
      </header>
      <main class='container container-fluid mt-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>
    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='js/logout.js'></script>
    {{/if}}
  </body>
  <script
    src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js'
    integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz'
    crossorigin='anonymous'
  >
  </script>

</html>