<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>The Tech Blog</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body class='bg-secondary'>
    <div class='flex-column justify-space-around'>
      <header class='display-flex justify-space-between align-center p-2'>
        <nav class='navbar navbar-expand-lg bg-dark fixed-top'>
          <div class='container-fluid'>
            <a class='navbar-brand text-light' href='/'>
              {{> logo}}
              Tech Blog
            </a>
            <div class='collapse navbar-collapse' id='navbarNav'>
              <ul class='navbar-nav'>
                <li class='nav-item'>
                  <a
                    class='nav-link active text-light'
                    aria-current='page'
                    href='/'
                  >
                    Home
                  </a>
                </li>
                <li class='nav-item'>
                  <a class='nav-link text-light' href='/dashboard'>Dashboard</a>
                </li>
                {{#if logged_in}}
                  <li class='nav-item'>
                    <a
                      class='nav-link text-light'
                      href='/'
                      id='logout'
                    >Logout</a>
                  </li>
                {{else}}
                  <li class='nav-item'>
                    <a class='nav-link text-light' href='/login'>Login</a>
                  </li>
                {{/if}}
              </ul>
            </div>
          </div>
        </nav>
      </header>
      <main class='container container-fluid mt-5 pb-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer class='fixed-bottom mt-auto py-3 bg-dark'>
        <div class='container text-center'>
          <span class='text-light'>Â© 2024 Designed and Developed by Ahmed
            Innovations</span>
        </div>
      </footer>
    </div>
    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>
  <script
    src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js'
    integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz'
    crossorigin='anonymous'
  >
  </script>

</html>