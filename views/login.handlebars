<h1>Login</h1>
<form class='login-form'>
  <div class='mb-3'>
    <input
      aria-describedby='usernameHelpBlock'
      class='form-control'
      id='login-username'
      placeholder='Username'
      type='text'
    />
  </div>
  <div class='mb-3'>
    <input
      aria-describedby='passwordHelpBlock'
      class='form-control'
      id='login-password'
      placeholder='Password'
      type='password'
    />
  </div>
  <button class='btn btn-dark text-light w-100' type='submit'>
    Log In
  </button>
</form>
<p>
  Don't have an account?
  <a class='link-opacity-100 text-dark' href='/signup'>Sign Up</a>
</p>

<script src='./js/login.js'></script>